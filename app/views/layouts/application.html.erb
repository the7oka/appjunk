<!DOCTYPE html>
<html>
  <head>
    <title>AppJunk | <%= @title %> </title>
    <%= csrf_meta_tags %>
    <script type="text/javascript" src="/assets/jquery.js"></script>
    <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/assets/application.scss">
    <script type="text/javascript" src="/assets/widgets.js"></script>
    <link rel="stylesheet" href="/assets/bootstrap.min.css">
    <script type="text/javascript" src="/assets/bootstrap.min.js"></script>
    <script type="text/javascript" src="/assets/notify.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/icon.jpg" />

    <meta property="fb:app_id"        content="1787403521537423"/>
    <meta property="og:title"        content="AppJunk | <%= @title %>"/>
    <meta property="og:type"          content="website"/>
    <script>
    <%#$(document).ready(function(){
      x = document.getElementById("notice").innerHTML
      if (x==""){}
      else {
      $.notify(x,{position:"right center"});
      };
    });%>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-87923508-1', 'auto');
      ga('send', 'pageview');
    </script>

    <%= yield(:head) %>
  </head>

  <body>
    <header class="container">
      <div class="row">
        <div class="col-sm-8">
          <a id="logolink" href="/"><p id="logo"><span id="app">app</span><span id="junk">junk</span></p></a>
          <% if user_signed_in? %>
          <div class="dropdown" id="navUser" >
              <a data-toggle="dropdown" style="text-decoration: none;"><%= current_user.display_name.humanize %>
              <%= image_tag current_user.avatar.url(:medium) , :id => "userLogo"%>
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/profile/<%= current_user.id %>"">My Profile</a></li>
              <li><a href="<%=destroy_user_session_path%>">Sign Out</a></li>
              <li><a href="/">Vanilla appjunk</a></li>
            </ul>
            </div>
          <% else %>

            <nav id="navSignUp">
              <a href="/users/sign_in" style="background-color: #e6e6e6">Log In</a>
              <a href="/users/sign_up" style="background-color: #e6e6e6">Sign Up</a>
            </nav>
          <% end %>
        </div>
        <nav class="col-sm-4" id="nav">
            <a href="/" id="navhome"><p>Appjunk</p></a>
            <a href="http://appjunk.tumblr.com/" target="_blank" id="navblog"><p>Blog</p></a>
            <a href="https://github.com/the7oka/appjunk" target="_blank" id="navgithub"><p>Github</p></a>
            <a href="/contact_us" id="navcontact"><p>Contact</p></a>
         </nav>
      </div>
      <hr id="hr">
    </header>
    <%= yield %>
  </body>
</html>
