<% content_for :head do %>
  <link href="/assets/offers.scss" rel="stylesheet" type="text/css">
  <script type="text/javascript" src='/assets/offers.js'></script>
<% end %>
<section class="container">
	<div class="col-sm-6">
		<h2>Requesting the offer :</h2>
		<h1><%= @offer.title.humanize %></h1>
	<%= form_for([@user, @offerrequest]) do |f| %>
		<%= f.number_field :quantity, {class: 'form-control',value: params[:quantity]}  %>
		<%= f.text_area :details, :maxlength => "1500", :minlength=> "5",style: "width:100%;height:150px",class: 'form-control' %>
		<input name="offer_id" type="hidden" value="<%=@offer.id%>" />
		<%= submit_tag "request", name: nil, class: 'btn btn-primary btn-lg hefzbutton' %>
	<% end %>
	</div>
	<div class="col-sm-6">
		<div class="col-sm-12 offerlink" href="/offers/show/<%= @offer.id%>">
      <%= image_tag @offer.photo.url(:medium), class: "offerphoto" %>
    <div class="offertitle">
      <%= @offer.title.humanize %>
    </div>
	</div>
</section>