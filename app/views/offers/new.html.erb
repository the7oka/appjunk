<% content_for :head do %>
	<link href="/assets/offers.scss" rel="stylesheet" >
	<script type="text/javascript" src='/assets/offers.js'></script>
	<script type="text/javascript" src='/assets/bootstrap-filestyle.min.js'></script>
<% end %>
<section class="jumbotron introcontainer">
<h2><span id="app" style="font-size:100%">garag</span><span id="junk" style="font-size:100%">ak</span> recommends that you double check every entry before submiting your ad to reach the perfect buyer for your offer.</h2>
</section>
<section class="container formcontainer">
<%= form_for([@user, @offer]) do |f| %>
	<div class="col-sm-6">
		Write a title explaining your offer:
		<%= f.text_field :title, :maxlength => "50", :minlength=> "10",class: 'form-control form-control-sm' %>
	</div>
	<div class="col-sm-6">
		Choose an offer category:
		<%= collection_select(:offer, :offercategory_id, Offercategory.all, :id, :name,{:include_blank => 'Please select a category'}, required: true,class: 'form-control form-control-sm') %>
	</div>
	<div class="col-sm-6">
			Delivery(days): <%= f.select :delivery, options_for_select((1..10).step(1)), {}, { :class => 'form-control form-control-sm' } %>
			</div>
	<div class="col-sm-6">
		Choose file: <%= f.file_field :photo %>
	</div>
	<div class="col-sm-12">
		details :
		<%= f.text_area :details, :maxlength => "1500", :minlength=> "5",style: "width:100%;height:150px",class: 'form-control',required: true %>
	</div>
	<div class="col-sm-12" style="text-align: center;margin:20px">
	    <%= f.submit :Submit, class: 'btn btn-primary btn-lg hefzbutton' %>
	</div>
<% end %>
</section>