<% @carlistings.each do |cl|%>
<section class="container" style="margin-top:5px;background-color:white;">
	<div class="col-xs-8">
	<%= image_tag cl.carmodel.carbrand.photo.url, class: "sora" %>
		<div class="modeltitles" style="vertical-align: middle;">
		<div style="display:flex;flex-direction:column;justify-content: center;margin:auto">
			<p><%= cl.carmodel.carbrand.name.humanize %></p>
			<p><%= cl.carmodel.name.humanize %></p>
		</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="pricecontainer"><%=cl.price%> EGP</div>
	</div>
	<div class="col-xs-12">
		<hr style="margin-bottom:10px;margin-top:5px">
	</div>
	<div class="col-sm-3">
		<%=image_tag cl.photo_one.url(:medium), class: 'photo_one'%>
	</div>
	<div class="col-sm-9">
		<div class="col-sm-12" style="background-color: #ffd752;border-radius: 5px;">
			Year: <%= cl.year %> |
			<%= cl.engine %> CC | 
			<%= cl.milleage %> KM | 
			<%if cl.automatic %>
			Automatic gearbox |
			<% else %>
			Manual gearbox | 
			<% end %>
			<%if cl.ac %>
			A/C | 
			<% end %>
			<%if cl.electricwindow %>
			Electric Windows | 
			<% end %>
			<%if cl.sunroof %>
			Sunroof | 
			<% end %>
			<%if cl.abs %>
			ABS | 
			<% end %>
			<%if cl.ebd %>
			EBD | 
			<% end %>
			<%if cl.centerlock %>
			Centerlock | 
			<% end %>
			<%if cl.alarm %>
			Alarm | 
			<% end %>
			<%if cl.cruisecontrol %>
			Cruise Control | 
			<% end %>
			<%if cl.powersteering %>
			Power Steering | 
			<% end %>
			<%if cl.airbag %>
			Airbag | 
			<% end %>
			<%if cl.music %>
			Music player | 
			<% end %>
			<%if cl.electricmirror %>
			Electric Mirrors | 
			<% end %>
			<%if cl.foldingmirror %>
			Auto Folding Mirrors | 
			<% end %>
			<% if cl.tire %>
			<%=cl.tire%> Inch tires
			<% end %>

		</div>
		<div class="col-sm-12">
			<div class="col-sm-8 detailscontainer">
				<%= cl.details.humanize %>
			</div>
			<div class="col-sm-4" style="padding-top:20px">
				<a href="/garagak/search?utf8=âœ“&carbrand_id=&carmodel_id=&fromyear=&toyear=&fromprice=&toprice=&fromkm=&tokm=&city_id=<%=cl.area.city.id%>&area_id=<%=cl.area.id%>&engine=&tire=&cartype_id=">From: <%= cl.area.city.name.humanize %>, <%= cl.area.name.humanize %></a>
				<p> <%= cl.phone %> </p>
			</div>
		</div>
	</div>
</section>
<% end %>