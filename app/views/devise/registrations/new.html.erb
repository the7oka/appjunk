<%= content_for :head do %>
  <link rel="stylesheet" href="/assets/registrations.scss">
  <link rel="stylesheet" href="/assets/bootstrap-social.css">
  <meta property="og:description"   content="Now you can sign up and stuff"/>
  <meta property="og:image"         content="http://www.appjunk.com/assets/sign_upimage.PNG"/>
  <meta property="og:url"           content="http://www.appjunk.com/user/sign_up"/>
<% end %>
<section class="container"> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row" style="margin-top:20px">
    <div class="col-sm-2"></div>
    <div class="col-sm-4" style="text-align:center">
      <h2>Sign up</h2>
    <div class="field">
        <%= f.text_field :username, autofocus: true, placeholder: "Username", class: 'form-control input-lg', required: true %>
      </div>
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, placeholder: "First name", class: 'form-control input-lg', required: true %>
      </div>
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", class: 'form-control input-lg' %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control input-lg', required: true %>
      </div>
      <div class="field">
        
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control input-lg', required: true %>
        
      </div>
      <div class="field" style="text-align:center">
          <em>(6 characters minimum)</em>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'form-control input-lg', required: true %>
      </div>

      <div class="actions" style="text-align:center">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
      </div>
      <div class="field">
        <%= devise_error_messages! %>
      </div>
<% end %>
    </div>
    <div class="col-sm-4" style="text-align:center;margin-top:60px;">
    <h2> Or just.. </h2>
      <a href="<%=user_twitter_omniauth_authorize_path%>" class="btn btn-block btn-social btn-lg btn-twitter" style="margin:auto;margin-bottom:10px;">
                <span class="fa fa-twitter"></span> Sign in with Twitter
            </a>
            <a href="<%=user_facebook_omniauth_authorize_path%>" class="btn btn-block btn-social btn-lg btn-facebook" style="margin:auto;">
              <span class="fa fa-facebook"></span> Sign in with Facebook
            </a>
    </div>
  </div>
</section>
