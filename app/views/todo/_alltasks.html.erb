			<% @tasks.each_with_index do |task,index| %>
			<div id="taskcol<%=task.id%>">
			<div class="col-sm-10" style="padding:0;font-size: 140%;">
				<%=index+1%>- <p id="task<%=task.id%>" class="tasktitle"><%= task.title.humanize %></p>
			</div>
			<div class="col-sm-1">
			<a onclick="donefunction(<%=task.id%>)"><i id="taskdone<%=task.id%>" class="fa fa-square-o fa-2x" aria-hidden="true"></i><i id="taskdonec<%=task.id%>" class="fa fa-check-square-o fa-2x" aria-hidden="true" style="display:none"></i></a>
			</div>
			<div class="col-sm-1">
			<a id="taskdelete<%=task.id%>"onclick="deletefunction(<%=task.id%>)"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></a>
			</div>
			</div>
			<% end %>