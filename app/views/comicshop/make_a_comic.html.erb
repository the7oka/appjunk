<% content_for :head do %>
  <link href="/assets/comicshop.scss" rel="stylesheet" type="text/css">
  <script type="text/javascript" src='/assets/comicshop.js'></script>
  <script type="text/javascript" src='/assets/bootstrap-filestyle.min.js'></script>
  <script>
  $(document).ready(function(){
  	$(":file").filestyle({icon: false});
	$(":file").filestyle('size', 'sm');
})
  </script>
<% end %>
<section class="container">
		<%= form_for([@user, @meme]) do |f| %>
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6">
			<div class="col-sm-12">
				<%= f.text_field :title,class: 'form-control',required: true, placeholder: "Write your title here" %>
			</div>
			<div class="col-sm-12">
				<%= f.file_field :photo %>
				
			</div>
			<div class="col-sm-12" style="text-align: center;">
					<div><%= f.radio_button :arabic, "1" , required: true %>Arabic</div>
					<div><%= f.radio_button :arabic, "0" %>English</div>
			</div>
			<div class="col-sm-12">
					<%= f.submit :Submit, class: 'btn btn-primary btn-lg hefzbutton' %>
			</div>
				<% end %>
		</div>
</section>